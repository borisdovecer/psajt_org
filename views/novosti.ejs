<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Psajt</title>
    <% include partials/scripts.ejs %>
</head>

<body class="stretched dark">

<!-- Document Wrapper
============================================= -->
<div id="wrapper" class="clearfix">


    <% include header.ejs %>

    <!-- Page Title
    ============================================= -->
    <section id="page-title">

        <div class="container clearfix">
            <h1>Novosti</h1>
            <div>
            <a href="/novosti/kultura">Kultura</a> /
            <a href="/novosti/nauka">Nauka</a> /
            <a href="/novosti/spiritualnost">Spiritualnost</a> /
            <a href="/novosti/iskustva">Iskustva</a> /
            <a href="/novosti/ekologija">Ekologija</a> /
            <a href="/novosti/politika">Politika</a> /
            <a href="/novosti/ostalo">Ostalo</a> /

            </div>
        </div>

    </section><!-- #page-title end -->

    <!-- Content
    ============================================= -->
    <section id="content">


            <div class="content-wrap">

            <div class="container clearfix">

                <!-- Posts
                ============================================= -->
                <div id="posts" class="post-grid grid-container clearfix" data-layout="fitRows">


                    <% if (data) { %>
                    <% data.forEach(function(vesti){   %>
                    <div class="entry clearfix" style="height: 600px">
                        <div class="entry-image">
                            <img class="image_fade" src="/images/upload/<%= vesti.img_name %>" alt="Standard Post with Image">
                        </div>
                        <div class="entry-title">
                            <h2><a href="/novosti/<%= vesti.category %>/<%= vesti.novosti_id %>"><%= vesti.title.slice(0,88); %></a></h2>
                        </div>
                        <ul class="entry-meta clearfix">
                            <li><i class="icon-calendar3"></i>  <%= vesti.created_on.toISOString().slice(0,-14) %></li>
                            <li><a href="#comments"><i class="icon-comments"></i>
                                    <% var count = 0;
                                        data2.forEach(function (kom) {
                                            if(kom.id === vesti.novosti_id){
                                                count = count + 1;
                                            }
                                    }) %>
                                    <%= count %>

                                    </a></li>
                            <li><a href="#"><i class="icon-camera-retro"></i></a></li>
                        </ul>
                        <div class="entry-content">
                            <p><%- vesti.description.slice(0,100).replace(/(<([^>]+)>)/ig,""); %>...</p>
                            <a href="/novosti/<%= vesti.category %>/<%= vesti.novosti_id %>"class="more-link">Read More</a>
                        </div>

                    </div>

                    <% }) %>
                    <% } %>

                </div><!-- #posts end -->



            </div>

        </div>

    </section><!-- #content end -->
    <% include footer.ejs %>



</div><!-- #wrapper end -->

<!-- Go To Top
============================================= -->
<div id="gotoTop" class="icon-angle-up"></div>

<!-- External JavaScripts
============================================= -->
<script src="js/jquery.js"></script>
<script src="js/plugins.js"></script>

<!-- Footer Scripts
============================================= -->
<script src="js/functions.js"></script>

</body>

</html>